<div>
    <h1><%= @title %></h1>
</div>
<br>
<input type="button" class="btn btn-warning" value="解決済み">

<a href="/content/<%= @id %>" class="btn btn-info">未解決</a>

<a href="/content/<%= @id %>/question" class="btn btn-success">問題</a>
<br>
  <table class="table table-striped">
    <thead>
        <tr>
          <th>ユーザー名</th>
          <th scope="col">内容</th>
          <th scope="col">学年</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @boards.each do |board| %>
        <tr>
          <td><%= @user.name %></td>
          <td><%= board.content %></td>
          <td><%= board.grade %></td>
          <td><a href="/content/<%= @id %>/<%= board.id %>" class="btn btn-success">答える</a></td>
        </tr>
        <%end%>
      </tbody>
  </table>