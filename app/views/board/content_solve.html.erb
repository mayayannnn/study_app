<div>
    <h1 ><%= @title %></h1>
</div>
<br>
<a href="/content/<%= @id %>/solve" class="btn btn-warning">解決済み</a>

<a href="/content/<%= @id %>" class="btn btn-info">未解決</a>

<a href="/content/<%= @id %>/question" class="btn btn-success">問題</a>
<br>
  <table class="table table-striped">
    <thead>
        <tr>
          <th>ユーザー名</th>
          <th scope="col">内容</th>
          <th scope="col">学年</th>
          <th scope="col">　</th>
        </tr>
      </thead>
      <tbody>
        <% @board_solves.each do |board_solves| %>
        <tr>
          <td><img src="<%= "/user_images/#{board_solves.user.image_name}" %>" alt="" width="50px" height="50px">　<%= board_solves.user.name %></td>
          <td><%= board_solves.content.truncate(40) %></td>
          <td><%= board_solves.grade %></td>
          <td><a href="/content/<%= @id %>/<%= board_solves.id %>" class="btn btn-primary">答える</a>
          <% if board_solves.user_id.to_i == session[:user_id].to_i %>
          <%= link_to("削除","/destroy/#{board_solves.id}",{method: "post",class:"btn btn-danger"}) %>
          <%= link_to("編集","/content/edit/#{board_solves.id}",{method: "post",class:"btn btn-success"})%></td>
          <% end %>
        </tr>
        <%end%>
        <a href="#top" style="color:inherit"><i class="bi bi-arrow-up-square-fill top"></i></a>
      </tbody>
      
  </table>