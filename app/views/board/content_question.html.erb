<div>
    <h1><%= @title %></h1>
</div>
<br>
<input type="button" class="btn btn-warning" value="解決済み">

<a href="/content/<%= @id %>" class="btn btn-info">未解決</a>

<a href="/content/<%= @id %>/question" class="btn btn-success">問題</a>
<br>


<table class="table table-striped">
    <thead>
        <tr>
          <th scope="col">内容</th>
          <th scope="col">学年</th>
          <th scope="col"></th>
          
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
        <tr>
          
          <td><%= question.content %></td>
          <td><%= question.grade %></td>
          <td><a href="#" class="btn btn-success">答える</a></td>
        </tr>
        <%end%>
      </tbody>
  </table>